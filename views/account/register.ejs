<section class="section register" aria-labelledby="register-label">
  <div class="container register-container">
    <% if (title) { %>
      <div class="register-form">
        <h1 class="h2 section-title">
          <%= title %>
        </h1>
        <!-- <label for="fname">First name:</label><br>
        <input type="text" id="fname" name="fname"><br>
        <label for="lname">Last name:</label><br>
        <input type="text" id="lname" name="lname"> -->
        <form action="">
          <div class="input-group">
            <label for="fname">First Name*</label>
            <input type="text" name="account_firstname" id="fname" required>
          </div>
          <div class="input-group">
            <label for="lname">Last Name*</label>
            <input type="text" name="account_lastname" id="lname" required>
          </div>
          <div class="input-group">
            <label for="email">Email*</label>
            <input type="email" name="account_email" id="email" required>
          </div>
          <div class="input-group">
            <label for="password">Password*</label>
            <input type="password" name="account_password" id="password" required>
          </div>
          <p>Password must be minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.
          </p>
          <a href="#" class="btn btn-register">
            <span class="span">Register</span>
            <span class="material-symbols-rounded">arrow_forward</span>
          </a>
        </form>
      </div>
      <% } else { res.redirect('/') } %>

        <%- messages() %>
  </div>
</section>