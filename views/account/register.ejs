<section class="section register" aria-labelledby="register-label">
  <div class="container register-container">
    <% if (title) { %>
      <div class="register-form">
        <h1 class="h2 section-title">
          <%= title %>
        </h1>
        <form id="registrationForm" action="/account/register" method="post">
          <div class="input-group">
            <label for="fname">First Name*</label>
            <input type="text" name="account_firstname" id="fname" placeholder="Enter your first name" required>
          </div>
          <div class="input-group">
            <label for="lname">Last Name*</label>
            <input type="text" name="account_lastname" id="lname" placeholder="Enter your last name" required>
          </div>
          <div class="input-group">
            <label for="email">Email*</label>
            <input type="email" name="account_email" id="email" placeholder="Enter a valid email address"
              pattern="^[\w\d\.]+@([\w\d\.])+\.+[\w]{2,4}$" required>
          </div>
          <div class="input-group">
            <label for="password">Password*</label>
            <input type="password" name="account_password" id="password" placeholder="Enter your password"
              pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^A-Za-z\s\d])(?!.*\s).{12,}$" required>
          </div>
          <p>Password must be minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.
          </p>
          <input type="submit" value="Register" class="btn btn-register" />
        </form>
      </div>
      <% } else { res.redirect('/') } %>

        <%- messages() %>
  </div>
</section>